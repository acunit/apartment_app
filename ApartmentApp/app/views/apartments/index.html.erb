<p id="notice"><%= notice %></p>

<h1>The Apartment App</h1>

<br>

<%= link_to 'List Apartment', new_apartment_path %>
<%= link_to 'View Apartments', new_apartment_path %>

<br>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Hours to contact</th>
      <th>Street1</th>
      <th>Street2</th>
      <th>City</th>
      <th>Postalcode</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.name %></td>
        <td><%= apartment.phone_number %></td>
        <td><%= apartment.hours_to_contact %></td>
        <td><%= apartment.street1 %></td>
        <td><%= apartment.street2 %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.postalcode %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.country %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
